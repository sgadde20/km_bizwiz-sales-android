<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five"
        android:background="@drawable/selector_calendar_list_content"
        android:gravity="center"
        android:padding="@dimen/three"
        android:weightSum="10" >

        <ImageView
            android:id="@+id/summary_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/fortyfive"
            android:layout_margin="@dimen/three"
            android:layout_weight="1.2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.4"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/summary_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingRight="@dimen/ten"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/summary_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

        <TextView
            android:id="@+id/summary_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="@string/qty"
            android:gravity="center"
            android:textColor="@color/blue_bg" />

        <EditText
            android:id="@+id/summary_qty_count"
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty"
            android:layout_margin="@dimen/three"
            android:layout_weight="1.3"
            android:background="@drawable/qty_border"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="3"
            android:focusable="false"
             android:focusableInTouchMode="false"
            android:textColor="@color/blue_bg" />
<requestFocus />
        <EditText
            android:id="@+id/summary_amount"
            android:layout_width="0dp"
            android:layout_height="@dimen/thirty"
            android:layout_margin="@dimen/two"
            android:layout_weight="3.3"
            android:background="@drawable/qty_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:singleLine="true"  
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:textColor="@color/blue_tab2_bg" />

        <requestFocus />

    </LinearLayout>

</LinearLayout>