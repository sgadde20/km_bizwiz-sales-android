<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phonenumber_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  >

    <LinearLayout
        android:id="@+id/add_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/ten"
        android:background="@drawable/resolve_background"
        android:orientation="vertical"
        android:paddingTop="@dimen/twenty"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fifteen"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/use_swiper_in"
                android:textColor="@color/black"
                android:textSize="@dimen/thirteen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textColor="@color/black"
               android:textSize="@dimen/thirteen"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fifteen"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="@string/device_status"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/swipper_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fifteen"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/swipper_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/Green"
                android:textSize="@dimen/twelve" />

            <Button
                android:id="@+id/swipe_proceed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginBottom="@dimen/twenty"
                android:layout_marginRight="@dimen/five"
                android:background="@drawable/selector_prospect_save_button"
                android:textColor="@color/white"
                android:textSize="@dimen/thirteen" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/forty"
        android:layout_height="@dimen/forty"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/select_close_background"
        android:contentDescription="@string/app_name" />

</RelativeLayout>