<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="MyTheme" parent="@android:style/Theme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/Theme.AppCompat">
        <item name="android:background">@color/gray_header</item>
        <item name="android:textColor">@color/gray_header</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="searchViewSearchIcon">@drawable/ic_search_icon</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">0dp</item>
        <!-- <item name="android:actionBarStyle">@style/bizwizActionBar</item> -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppThemeNOBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="bizwizActionBar"></style>

    <style name="customer_page_texts">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/ten</item>
    </style>

    <style name="customer_page_texts.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt20</item>
    </style>

    <style name="appointments_textview">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ten</item>
    </style>

    <style name="appointments_textview.large">
        <item name="android:textSize">@dimen/ten</item>
    </style>

    <style name="MySwitch" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyNumberPicker" parent="@android:style/Widget.Holo.DatePicker">
        <item name="android:textColor">@color/blue_bg</item>
    </style>

    <style name="DropDownNav" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:dropDownSelector">@android:color/transparent</item>
        <item name="android:popupBackground">@drawable/background_with_corners</item>
    </style>

</resources>